<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="@dimen/value_5">
	
	<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/postImage"
			android:layout_width="@dimen/post_image_size"
			android:layout_height="@dimen/post_image_size"
			android:layout_gravity="center_vertical"
			android:src="@drawable/placeholder_image" />
	
	<androidx.appcompat.widget.LinearLayoutCompat
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/value_10"
			android:orientation="vertical">
		
		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/titleText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="1"
				android:text="@string/app_name"
				android:textColor="@color/black_a87"
				android:textStyle="bold" />
		
		<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/bodyText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:maxLines="3"
				android:text="@string/app_name"
				android:textColor="@color/black_a38" />
	</androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
